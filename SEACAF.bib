@article{hagerEffectsManagementLandscape2015,
  title = {Effects of Management and Landscape Composition on the Diversity and Structure of Tree Species Assemblages in Coffee Agroforests},
  author = {H{\"a}ger, Achim and Fern{\'a}ndez Ot{\'a}rola, Mauricio and Stuhlmacher, Michelle Faye and Acu{\~n}a Castillo, Rafael and Contreras Arias, Agust{\'i}n},
  year = {2015},
