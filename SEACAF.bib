@article{Haggar_2021_Shade,
  title = {Shade and {{Agronomic Intensification}} in {{Coffee Agroforestry Systems}}: Trade-{{Off}} or {{Synergy}}?},
  shorttitle = {Shade and {{Agronomic Intensification}} in {{Coffee Agroforestry Systems}}},
  author = {Haggar, Jeremy and Casanoves, Fernando and Cerda, Rolando and Cerretelli, Stefania and {Gonzalez-Mollinedo}, Sergio and Lanza, Gracia and Lopez, Erick and Leiva, Benjamin and Ospina, Alejandra},
  year = {2021},
