@article{kimCarbonSequestrationNet2016,
  ids = {kim_Carbon_2016a},
  title = {Carbon Sequestration and Net Emissions of {{CH4}} and {{N2O}} under Agroforestry: Synthesizing Available Data and Suggestions for Future Studies},
  shorttitle = {Carbon Sequestration and Net Emissions of {{CH4}} and {{N2O}} under Agroforestry},
