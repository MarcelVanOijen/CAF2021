@article{mellisseHomeGardenSystem2018,
  title = {Home Garden System Dynamics in {{Southern Ethiopia}}},
  author = {Mellisse, Beyene Teklu and {van de Ven}, Gerrie W. J. and Giller, Ken E. and Descheemaeker, Katrien},
