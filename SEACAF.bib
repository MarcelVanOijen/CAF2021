@article{debeenhouwerBiodiversityCarbonStorage2016,
  title = {Biodiversity and Carbon Storage Co-Benefits of Coffee Agroforestry across a Gradient of Increasing Management Intensity in the {{SW Ethiopian}} Highlands},
